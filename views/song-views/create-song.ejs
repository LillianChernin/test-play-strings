<% include ../partials/header %>

<fieldset class="addNewSongForm">
  <h3>Add New Song</h3>
  <textarea class="songNameInput" name="name" rows="1" cols="40" placeholder="Song name..."></textarea>
  <select class="difficultySelect" name="difficulty" required>
    <option value="">Difficulty...</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <select class="instrumentSelect" name="instrument" required>
    <option value="">Instrument...</option>
    <option value="violin">Violin</option>
    <option value="viola">Viola</option>
    <option value="cello">Cello</option>
  </select>
  <fieldset>
    <h4>Add Note to Song</h4>
    <div>
      <ul class="addNoteUl">
      </ul>
    </div>
    <select class="noteSelect" name="note" required>
      <option value="">Note</option>
      <option value="c">C</option>
      <option value="db">Db</option>
      <option value="d">D</option>
      <option value="eb">Eb</option>
      <option value="e">E</option>
      <option value="f">F</option>
      <option value="gb">Gb</option>
      <option value="g">G</option>
      <option value="ab">Ab</option>
      <option value="a">A</option>
      <option value="bb">Bb</option>
      <option value="b">B</option>
      <option value="rest">Rest</option>
    </select>
    <select class="octaveSelect" name="octave" required>
      <option value="">Octave</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input class="lengthSelect" type="number" placeholder="Length of Note in Beats" step="0.25" min="0.25" max="12">
    <button class="addNoteButton">Add Note</button>
  </fieldset>
  <button class="submitNewSongButton">Submit Song</button>
</fieldset>
<button class="demoSongButton">Demo Song</button>
<div class="bpm-selection-demo-wrapper" style="display: none">
  <h3 class="speedSelectionMessage">Select play speed below:</h3>
  <button class="bpmSelectionButton verySlow" data-speed="verySlow">Very Slow</button>
  <button class="bpmSelectionButton slow" data-speed="slow">Slow</button>
  <button class="bpmSelectionButton normal" data-speed="normal">Normal</button>
  <button class="bpmSelectionButton fast" data-speed="fast">Fast</button>
</div>
<br>
<button class='startSong' style='display: none'>Start Song</button>
<button class='pauseButton' style='display: none'>Pause Song</button>
<button class='resumeButton' style='display: none'>Resume Song</button>
