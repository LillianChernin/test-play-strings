<% include ../partials/header %>

<div class="song-list-wrapper">
  <h2 class="song-list-header">Song Name<div class="song-list-header-spacer"></div>Instrument<div class="song-list-header-spacer"></div>Song Difficulty</h2>
  <div class="song-name-list-wrapper">
  <% for (let i = 0; i < data.length; i++) { %>
    <a class="song-list-link" href="/songs/<%= data[i]._id%>"><span><%= data[i].name %></span></a>
  <% } %>
  </div>
  <div class="song-list-spacer"></div>
  <div class="song-instrument-list-wrapper">
    <% for (let i = 0; i < data.length; i++) { %>
      <% let capitalizedInstrumentName = data[i].instrument.charAt(0).toUpperCase() + data[i].instrument.slice(1) %>
      <p class="song-instrument-name"><%= capitalizedInstrumentName %></p>
  <% } %>
  </div>
  <div class="song-list-spacer"></div>
  <div class="song-difficulty-star-list-wrapper">
    <% for (let i = 0; i < data.length; i++) { %>
    <div class="difficulty-stars-display">
      <% for (let k = 0; k < data[i].difficulty; k++) { %>
        <img class="star" src="images/filled-star.png" height="30" width="30">
      <% } %>
      <% for (let j = 0; j < 5 - data[i].difficulty; j++) { %>
        <img class="star" src="images/empty-star.png" height="30" width="30">
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>
